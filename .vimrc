" Turn off bell noises
set belloff=all

" Enable syntax highlighting
syntax on

" Line number settings
set number
set relativenumber

" Split to right side by default
set splitright

" Indentation settings
set smartindent

" Tab / Space settings
set tabstop=4
set softtabstop=4
set shiftwidth=4
set expandtab

" Use system clipboard
set clipboard=unnamedplus
