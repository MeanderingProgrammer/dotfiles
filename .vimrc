" Turn off bell noises
set belloff=all

" Enable syntax highlighting
syntax on

" Line number settings
set number
set relativenumber

" Search settings
set ignorecase
set smartcase

" Set wait time for detecting changes
set updatetime=250

" Split to right side by default
set splitright
set splitbelow

" Indentation settings
set smartindent

" Tab / Space settings
set tabstop=4
set softtabstop=4
set shiftwidth=4
set expandtab

" Keep some context in view
set scrolloff=8
set sidescrolloff=8

" Use system clipboard
set clipboard=unnamedplus
